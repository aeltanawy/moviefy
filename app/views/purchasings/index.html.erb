<p id="notice"><%= notice %></p>

<% if admin? %>

  <h1>Purchasings</h1>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>User Name</th>
        <th>Number of tickets</th>
        <th>Total in $</th>
        <th>Movie</th>
        <th>Theater Name</th>
        <th>Theater Zipcode</th>
        <th>Theater City</th>
        <th>Theater State</th>
        <th>Member since</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @purchasings.each do |purchasing| %>
        <tr>
          <td><%= purchasing.user.first_name %> <%= purchasing.user.last_name %></td>
          <td><%= purchasing.num_of_tickets %></td>
          <td><%= purchasing.total %></td>
          <td><%= purchasing.movie.movie_title %></td>
          <td><%= purchasing.theater.theater_name %></td>
          <td><%= purchasing.theater.zipcode %></td>
          <td><%= purchasing.theater.city%></td>
          <td><%= purchasing.theater.state %></td>
          <td><%= purchasing.user.created_at %></td>
          <td><%= link_to 'Show', purchasing %></td>
          <td><%= link_to 'Edit', edit_purchasing_path(purchasing) %></td>
          <td><%= link_to 'Destroy', purchasing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'Back', admin_dashboard_path %> |
  <%= link_to 'New Purchasing', new_purchasing_path %>

<% end %>
