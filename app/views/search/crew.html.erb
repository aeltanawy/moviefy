<div class="container">
<h1>Search Crews</h1>
</div><br>

<div class="container">
  <%= form_tag(crews_path, method: :get) do %>
    <p>
      <%= label_tag("Director Name:") %>
      <%= text_field_tag(:filter_dir, params[:filter_dir]) %>
    </p>

    <p>
      <%= label_tag("Actor:") %>
      <%= text_field_tag(:filter_actor, params[:filter_actor]) %>
    </p>

    <p>
      <%= label_tag("Movie Title:") %>
      <%= text_field_tag(:filter_movie, params[:filter_movie]) %>
    </p><br>

    <p>
      <%= submit_tag("Search") %>
    </p>
  <% end %>
</div>
