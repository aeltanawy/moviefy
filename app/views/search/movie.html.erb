<div class="container">
<h1>Search Movies</h1>
</div><br>

<div class="container">
  <%= form_tag(movies_path, method: :get) do %>
    <p>
      <%= label_tag("Movie Title:") %>
      <%= text_field_tag(:filter_title, params[:filter_title]) %>
    </p>

    <p>
      <%= label_tag("Genre:") %>
      <%= text_field_tag(:filter_genre, params[:filter_genre]) %>
    </p>

    <p>
      <%= label_tag("Keyword:") %>
      <%= text_field_tag(:filter_key, params[:filter_key]) %>
    </p><br>

    <p>
      <%= submit_tag("Search") %>
    </p>
  <% end %>
</div>
