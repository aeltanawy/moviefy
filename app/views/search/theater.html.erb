<div class="container">
<h1>Search Theaters in the US</h1>
</div><br>

<div class="container">
  <%= form_tag(theaters_path, method: :get) do %>
    <p>
      <%= label_tag("State:") %>
      <%= text_field_tag(:filter_state, params[:filter_state]) %>
    </p>

    <p>
      <%= label_tag("City:") %>
      <%= text_field_tag(:filter_city, params[:filter_city]) %>
    </p>

    <p>
      <%= label_tag("Zipcode:") %>
      <%= text_field_tag(:filter_zipcode, params[:filter_zipcode]) %>
    </p><br>

    <p>
      <%= submit_tag("Search") %>
    </p>
  <% end %>
</div>
