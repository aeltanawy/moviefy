<h1>Theaters</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>State</th>
      <th>City</th>
      <th>Theater name</th>
      <th>Zipcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @theaters.each do |theater| %>
      <tr>
        <td><%= theater.state %></td>
        <td><%= theater.city %></td>
        <td><%= theater.theater_name %></td>
        <td><%= theater.zipcode %></td>

        <!-- only admin -->
        <% if admin? %>
          <td><%= link_to 'Edit', edit_theater_path(theater) %></td>
          <td><%= link_to 'Destroy', theater, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<!-- only admin -->
<% if admin? %>
  <%= link_to 'Back', admin_dashboard_path %> |
  <%= link_to 'New Theater', new_theater_path %>
<% else %>
  <%= link_to 'Back', root_path %>
<% end %>
